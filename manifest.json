{
    "manifest_version": 2,

    "name": "Amazon Notification",

    "description": "Build an Extension!",

    "version": "1.0",
    
    "page_action": {
        "default_title": "Amazon Notifications",
        "default_popup": "popup.html",
        "default_icon":{
            "128": "amazon.png"
        }
    },

    "icons":{
        "128": "amazon.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches":["http://www.amazon.ca/*", "http://www.amazon.com/*","https://www.amazon.ca/*", "https://www.amazon.com/*"],
            "js":["content.js"],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    
    "permissions": [
        "activeTab",
        "storage", 
        "tabs"
    ]
}